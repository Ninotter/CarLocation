{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
<style>
/* Center the form horizontally and vertically */
#form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  text-align: center;
}

/* Add some basic styling for a smoother appearance */
#form div {
  margin: 10px;
}

label {
  font-weight: bold;
}

input, select {
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 100%;
}

button {
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

button:hover {
  background-color: #0056b3;
}

</style>

{{ form(form) }}
{% endblock %}
